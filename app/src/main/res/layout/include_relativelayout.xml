<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:orientation="horizontal">

           <TextView
                android:id="@+id/scoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/paddingLeft_textview"
                android:paddingRight="@dimen/paddingRight_textview"
                android:text="Score"
                android:textSize="@dimen/font_sizeSmall" />

	  <TextView
    		android:id="@+id/scoreCount"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginBottom="@dimen/layout_marginBottom_textview"
    		android:layout_toRightOf="@+id/scoreTextView"
    		android:text=""
    		android:textSize="@dimen/font_sizeSmall" />

          <TextView
                android:id="@+id/questionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_marginBottom_textview"
                android:layout_toLeftOf="@+id/questionNumber"
                android:paddingRight="@dimen/paddingRight_textview"
                android:text="Question"
                android:textSize="@dimen/font_sizeSmall" />

            <TextView
                android:id="@+id/questionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/layout_marginBottom_textview"
                android:paddingRight="@dimen/paddingRight_textviewLg"
                android:text=""
                android:textSize="@dimen/font_sizeSmall" />
 </RelativeLayout>